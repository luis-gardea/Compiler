class TestBad {
    --test1;
    test2(): String {
        if a < b then
            4
        else
            5
        fi 
    };
};


class Testgood 
    --nested if/else statements--
    test1(): Int {
        if a < b then
	        if b < c then
                1
	        else
		        if c < d then
                    2
		        else
                    3
		        fi
	        fi
        else
            4
        fi
    };

    --Simplest let statement (LET1)--
    test2(): Int {
        let a : Int in 
            3
    };

    --Simple let (LET1)--
    test2(): Int {
        let a : Int in 
            3
    };

    --Tricky end let test (LET2)--
    test3(): Int {
        let a : Int <- 3 in
            b <- a + a
    };

    --Nested let before IN--
    test4(): Int {
        let a : Int <- 3 in
            let b : Int in
                c <- a + a
    };

    -- Lots of nested let before IN--
    test5(): Int {
        let a : Int <- let b : Int in 
            c <- a + a in
            let d : Int in
                c <- a + a
    };

    -- Nested lets--
    test6(): Int {
        let a : Int <- let b : Int in 
            c <- a + a + a * g in
            let d : Int in
                c <- a + a
    };

    -- Nested lets--
    test7(): Int {
        let a : Int <- let b : Int in 
            c <- a + a + a * g in
            let d : Int in
                c <- a + a
    };
};

